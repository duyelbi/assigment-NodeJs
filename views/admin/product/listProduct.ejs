<%- include('../playout/header.ejs'); -%>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
  <!-- SIDEBAR - START -->

  <%- include('../playout/menu.ejs'); -%>

  <!--  SIDEBAR - END -->
  <!-- START CONTENT -->
  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row">
      <div class="col-xs-12">
        <div class="page-title">
          <div class="pull-left">
            <h1 class="title">Product List</h1>
          </div>
          <div class="pull-right hidden-xs"></div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12">
        <section class="box">
          <header class="panel_header">
            <h2 class="title pull-left">All Product</h2>
            <div class="actions panel_actions pull-right">
              <a class="box_toggle fa fa-chevron-down"></a>
              <a
                class="box_setting fa fa-cog"
                data-toggle="modal"
                href="#section-settings"
              ></a>
              <a class="box_close fa fa-times"></a>
            </div>
          </header>
          <div class="content-body">
            <div class="row">
              <% if(success_msg != ''){ %>
              <div class="alert alert-success"><%= success_msg%></div>
              <% } %>
              <div class="col-xs-12">
                <!-- ********************************************** -->
                <table
                  id="example"
                  class="display table table-hover table-condensed"
                >
                  <thead>
                    <tr>
                      <th>  STT</th>
                      <th>Name</th>
                      <th>Category</th>
                      <th>Image</th>
                      <th>Color</th>
                      <th>Size</th>
                      <th>Tag</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < product.length; i++) {%>
                    <tr>
                      <td><%= i + 1%></td>
                      <td><%= product[i].name%></td>
                      <td><%= product[i].cate%></td>
                      <td>
                        <img src="<%='/upload/' + product[i].image[0]%>" width="100px" alt="" />
                      </td>
                      <% console.log(product[i].image[0])%>
                      <td><%= product[i].color%></td>
                      <td><%= product[i].size%></td>
                      <td><%= product[i].tag%></td>
                      <td><%= product[i].price%></td>
                      <td><%= product[i].quantity%></td>

                      <td>
                        <a
                          href="/admin/product/<%= product[i]._id %>/delete"
                          >Delete</a
                        >
                        |
                        <a
                          href="/admin/product/<%= product[i]._id %>/edit"
                          >Edit</a
                        >
                      </td>
                    </tr>
                    <%}%>
                  </tbody>
                </table>
                <!-- ********************************************** -->
              </div>
            </div>
          </div>
        </section>
      </div>
    </section>
  </section>
  <!-- END CONTENT -->
  <div class="chatapi-windows"></div>

  <%- include('../playout/footer.ejs'); -%>
  <script
    src="/TT_Admin/assets/plugins/datatables/js/jquery.dataTables.min.js"
    type="text/javascript"
  ></script>
  <script
    src="/TT_Admin/assets/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js"
    type="text/javascript"
  ></script>
  <script
    src="/TT_Admin/assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"
    type="text/javascript"
  ></script>
  <script
    src="/TT_Admin/assets/plugins/datatables/extensions/Responsive/bootstrap/3/dataTables.bootstrap.js"
    type="text/javascript"
  ></script>
</div>
